# Firebase configuration
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-auth-domain"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-storage-bucket"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-messaging-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# API Base URL (no trailing slash; avoid double slashes in request URLs)
NEXT_PUBLIC_API_BASE="http://localhost:3000"

# CORS: comma-separated origins allowed to call the API (e.g. custom domain + Vercel)
# If unset, defaults: my-preacher-helper.com, my-preacher-helper.vercel.app, localhost
# CORS_ALLOWED_ORIGINS="https://my-preacher-helper.com,https://my-preacher-helper.vercel.app"

# Firebase Admin SDK configuration
# This is your service account key converted to a base64 string.
# To generate this value:
# 1. Go to Firebase Console > Project Settings > Service Accounts
# 2. Click "Generate New Private Key"
# 3. Save the .json file
# 4. Run this command to convert it to base64:
#    cat your-service-account.json | base64 | tr -d '\n'
# 5. Copy the output and paste it here
FIREBASE_SERVICE_ACCOUNT="your-base64-encoded-service-account-key"

# AI Configuration
OPENAI_API_KEY="your-openai-api-key"
OPENAI_AUDIO_MODEL="gpt-4o-transcribe"
OPENAI_GPT_MODEL="o4-mini"
OPENAI_OPTIMIZATION_MODEL="gpt-4o-mini"
OPENAI_TTS_MODEL_STANDARD="gpt-4o-mini-tts"
OPENAI_TTS_MODEL_HD="tts-1"
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-2.0-flash"
AI_MODEL_TO_USE="GEMINI"

# Feature Flags
# Set to 'true' to use structured output for thought generation
USE_STRUCTURED_OUTPUT="false"

# Audio Recording Configuration
# Maximum recording duration in seconds (default: 90)
NEXT_PUBLIC_AUDIO_RECORDING_DURATION=90
# Grace period countdown at end of recording in seconds (default: 3)
NEXT_PUBLIC_AUDIO_GRACE_PERIOD=3

# Debug mode (optional)
DEBUG_MODE="false"