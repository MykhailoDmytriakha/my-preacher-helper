    "next": "^14.2.23",
    "openai": "^4.81.0",
    "punycode": "^2.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "^15.4.0",
    "react-textarea-autosize": "^8.5.7",
    "sonner": "^1.7.4",
    "uuid": "^11.0.5"
